@model BTL_CALLWEB_API.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Index.cshtml";
}

<h1>Edit Order</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @foreach(var account in ViewBag.Accounts)
                {
                    if (account.AccountId == Model.AccountId)
                    {
                        <span class="form-control">@account.Name</span>
                    }
                }
                <input asp-for="Name" class="form-control" type="hidden" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <span class="form-control">@Model.Phone</span>
                <input asp-for="Phone" class="form-control" type="hidden" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <span class="form-control">@Model.Address</span>
                <input asp-for="Address" class="form-control" type="hidden" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <span class="form-control">@Model.TotalPrice</span>
                <input asp-for="TotalPrice" class="form-control" type="hidden" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control">
                    @if (Model.status != 3)
                    {
                        @if (Model.status > 0)
                        {
                            <option value="0" disabled>Pending</option>
                        }
                        else
                        {
                            <option value="0" disabled>Pending</option>
                        }
                        @if (Model.status > 1)
                        {
                            <option value="1" disabled>Delivering</option>
                        }
                        else
                        {
                            <option value="1">Delivering</option>
                        }
                        <option value="2">Completed</option>
                    }
                    else
                    {
                        <option value="0" disabled>Pending</option>
                        <option value="1" disabled>Delivering</option>
                        <option value="2" disabled>Completed</option>
                        <option value="3" disabled>Cancel</option>
                    }
                </select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="note" class="control-label"></label>
                <span class="form-control">@Model.note</span>
                <input asp-for="note" class="form-control" type="hidden" />
                <span asp-validation-for="note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <span class="form-control">@Model.CreatedAt</span>
                <input asp-for="CreatedAt" class="form-control" type="hidden" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

