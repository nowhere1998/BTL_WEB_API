    <style>
        /* Pagination Container */
        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Pagination List */
        .pagination {
            display: inline-flex;
            list-style-type: none;
            padding-left: 0;
        }

            /* Page Items (li elements) */
            .pagination .page-item {
                margin: 0 5px;
            }

            /* Circular Page Links (a elements) */
            .pagination .page-link {
                display: flex;
                justify-content: center;
                align-items: center;
                width: 40px; /* Width for circular button */
                height: 40px; /* Height for circular button */
                padding: 0; /* Remove padding */
                border-radius: 50%; /* Make it circular */
                color: #007bff; /* Text color */
                text-decoration: none; /* No underline */
                background-color: #f1f1f1; /* Background color */
                border: 1px solid #ddd; /* Border around button */
                transition: all 0.3s ease; /* Smooth transition */
            }

                /* Hover Effect */
                .pagination .page-link:hover {
                    background-color: #007bff;
                    color: #fff;
                }

            /* Active Page Item */
            .pagination .active .page-link {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
            }

            /* Disabled Page Item */
            .pagination .disabled .page-link {
                color: #ccc;
                background-color: #e9ecef;
                border-color: #ddd;
                pointer-events: none; /* Prevent clicking on disabled links */
            }

    </style>
